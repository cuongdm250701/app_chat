<%= link_to "Back to list group", groups_path %>
<h1>Add Users to Group</h1>

<%= form_for @group, url: add_members_group_path(@group), method: :post do |f| %>
  <% @users.each do |user| %>
    <div>
      <%= check_box_tag "user_ids[]", user.id %>
      <%= label_tag "user_ids[]", user.username %>
    </div>
  <% end %>

  <%= f.submit "Add Users" %>
<% end %>