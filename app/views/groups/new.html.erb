<%= link_to "Back to list groups", groups_path %>
<h5> Add Group </h5>
<%= form_for @group, url: groups_path, method: :post do |f| %>
    <%= f.text_field :name, placeholder: 'Enter your group' %>

    <!-- Nested users field-->
    <div>
        <h3> Users: <h3>
        <div id="users">
            <%= f.fields_for :users do |user| %>
                <%= render 'user_fields', f: user %>
            <% end %>
            <div class="links">
                <%= link_to_add_association 'Add user', f, :users %>
            </div>
        </div>
    </div>

    <div>
    <%= f.submit "Submit" %>
<% end %>