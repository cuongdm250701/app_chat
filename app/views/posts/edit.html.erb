<%= link_to "Back to list posts", group_posts_path %>
<h5> Edit Post </h5>

<div>    
    <%= form_for @post, url: group_post_path(params[:group_id], params[:id]), method: :put do |f| %>
        <div class='title-post'>    
            <%= f.text_field :title, placeholder: 'Enter your title' %>
        </div>
        <div class='description-post'>
            <%= f.text_area :description, placeholder: 'Enter your description', class: 'content-description' %>
        </div>
        <%= f.submit "Submit" %>
    <% end %>
</div>